<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ECECEC"
    android:padding="16dp">

    <!-- Título -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADMINISTRAR PATENTES"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Campo para ingresar nueva patente -->
    <EditText
        android:id="@+id/editTextNewPatente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese su nueva patente aquí..."
        android:padding="12dp"
        android:background="@drawable/edittext_background"
        android:layout_marginBottom="16dp"
        android:textColor="#000000"
        android:textColorHint="#888888" />

    <!-- Botón agregar patente -->
    <Button
        android:id="@+id/buttonAddPatente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar patente"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_background"
        android:padding="12dp"
        android:layout_marginBottom="24dp" />

    <!-- Subtítulo "Mis vehículos" -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mis vehículos:"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Lista de patentes -->
    <ListView
        android:id="@+id/listViewPatentes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />
</LinearLayout>
